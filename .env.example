# ──────────────────────────────────────────
# PriorAuth AI — Environment Configuration
# Copy to .env and customize values
# ──────────────────────────────────────────

# ── Database ─────────────────────────────
DATABASE_URL=sqlite:///./priorauth.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:pass@localhost:5432/priorauth

# ── Authentication ───────────────────────
JWT_SECRET=change-this-to-a-32-char-random-string
JWT_EXPIRE_MINUTES=480

# ── CORS ─────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ── File Upload ──────────────────────────
UPLOAD_DIR=./uploads
MAX_UPLOAD_MB=10

# ── Application ──────────────────────────
APP_NAME=PriorAuth AI
LOG_LEVEL=INFO
